#:import Clock kivy.clock.Clock
#:import BaseSnackbar kivymd.uix.snackbar.BaseSnackbar

<CustomSnackbar>
    md_bg_color: app.theme_cls.primary_dark
    snackbar_x: dp(10)
    snackbar_y: dp(10)

    MDIconButton:
        pos_hint: {'center_y': .5}
        icon: root.icon
        opposite_colors: True

    MDLabel:
        id: text_bar
        size_hint_y: None
        height: self.texture_size[1]
        text: root.text
        font_size: root.font_size
        theme_text_color: 'Custom'
        text_color: get_color_from_hex('ffffff')
        shorten: True
        shorten_from: 'right'
        pos_hint: {'center_y': .5}

<AlarmView>:
    auto_dismiss: False
    size_hint: .5, .5

    MDBoxLayout:
        orientation: 'vertical'
        pos_hint: {"center_x":.5, "center_y": 0.5}
        MDBoxLayout:
            orientation: 'horizontal'
            size_hint: .8, .5
            pos_hint: {"center_x":.5, "center_y": 0.5}
        
            MDLabel:
                size_hint: .3, None
                height: slider.height
                text: 'Volume'
                halign: 'center'
                font_size: sp(12)

            MDSlider:
                id: slider
                size_hint_x: 0.7
                orientation: 'horizontal'
                min: 0
                max: 1
                value: 1
                on_touch_up: root.set_volume(slider.value)
          
        MDLabel:
            size_hint_y: .3

        MDBoxLayout:
            id: buttons
            orientation: 'horizontal'
            size_hint_y: .2
            padding: dp(20)
            
            MDRoundFlatButton:
                id: resume
                text:'Resume'
                size_hint_x: 0.3
                on_press: root.resume_alarm(self)
                pos_hint: {'center_x':.5, 'center_y':.5}

            MDRoundFlatButton:
                id: pause
                text:'Pause'
                size_hint_x: 0.3
                on_press: root.pause_alarm(self)
                pos_hint: {'center_x':.5, 'center_y':.5}

            MDRoundFlatButton:
                id: stop
                text:'Stop'
                size_hint_x: 0.3
                on_press: root.stop_alarm(self)
                pos_hint: {'center_x':.5, 'center_y':.5}
